{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2022",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./src",
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["lib/**/*.ts"],
	"exclude": ["node_modules"],
	"files": ["src/types.d.ts"]
}
